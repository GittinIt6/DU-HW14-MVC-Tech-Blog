{{#if logged_in}}

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}. Here are your posts:</h2>
  </div>
</div>

{{#each posts as |post| }}
  <div class="box">
    <div class="flex-head">
        <span class="head-title"><a href="/post/{{post.id}}">{{post.title}}</a></span>
        <span class="posted-by">Posted by {{post.user.name}} on {{format_date post.createdAt}}</span>
    </div>
    <div class="flex-content">
        {{post.content}}
    </div>
  </div>  
{{/each}}  

  
<div id="new-post-button">
  <a href="/newpost">+ New Post</a>
</div>

{{else}}
<a href="/login"> You must be logged in to see your dashboard </a>

{{/if}}


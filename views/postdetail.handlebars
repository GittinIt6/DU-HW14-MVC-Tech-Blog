{{!-- {{#each posts as |post| }} --}}
        <div class="box">
          <div class="flex-head">
              <span class="head-title"><a href="/post/{{posts.id}}">{{posts.title}}</a></span>
              <span class="posted-by">Posted by {{posts.user.name}} on {{format_date posts.createdAt}}</span>
              {{!-- <span class="posted-by">Posted by {{post.user.name}} on Dec 1, 2022</span> --}}
          </div>
          <div class="flex-content">
              {{posts.content}}
          </div>
        </div> 
        {{#each commentAry.[0] }}
        <div class="box">
          <div class="flex-head">
              {{!-- <span class="head-title"><a href="/post/{{post.id}}">{{post.title}}</a></span> --}}
              <span class="posted-by">Posted by userID: {{user_id}} on {{format_date createdAt}}</span>
          </div>
          <div class="flex-content">
              {{commentText}}
          </div>
        </div>  
        {{/each}}
{{!-- {{/each}} --}}




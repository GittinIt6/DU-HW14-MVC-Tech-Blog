{{#each posts as |post| }}
        <div class="box">
          <div class="flex-head">
              <span class="head-title"><a href="/post/{{post.id}}">{{post.title}}</a></span>
              <span class="posted-by">Posted by {{post.user.name}} on {{format_date post.createdAt}}</span>
          </div>
          <div class="flex-content">
              {{post.content}}
          </div>
        </div>  
{{/each}}

{{#if logged_in}}
<div id="new-post-button">
  <a href="/newpost">+ New Post</a>
</div>
{{/if}}        

